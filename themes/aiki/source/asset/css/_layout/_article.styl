

article p, article table, article ol, article ul, article iframe, article dl
	margin-top: block-10
	margin-bottom: block-10

article li ol, article li ul
	margin-bottom: 0

.content-photo
	margin-bottom: block-40

.content-meta
	margin-bottom: block-20
	padding-bottom: block-10
	font-size: 10px
	border-bottom: border-default
	text-align: right
	letter-spacing: 2px
	text-transform: uppercase

	span.meta-category:before
		content: "\2022"

.box-content-title
	margin-bottom: block-20
	font-size: 28px
	letter-spacing: 1px

.content
	overflow: hidden
	border-bottom: border-default
	padding-bottom: block-20
	margin-bottom: block-10

	h1
		//text-transform: uppercase
		font-size: 28px
		letter-spacing: 2px
		margin-top: block-10
		margin-bottom: block-10

	h2
		border-bottom: border-default
		font-size: 24px
		letter-spacing: 2px
		padding-top: block-20
		padding-bottom: block-5

	h3
		//text-transform: uppercase
		font-size: 22px
		letter-spacing: 2px
		margin-top: block-10
		margin-bottom: block-10

	h4
		//text-transform: uppercase
		font-size: 20px
		letter-spacing: 2px
		margin-top: block-10
		margin-bottom: block-10


	h5
		//text-transform: uppercase
		font-size: 18px
		letter-spacing: 2px
		margin-top: block-10
		margin-bottom: block-10

	h6
		//text-transform: uppercase
		font-size: 16px
		letter-spacing: 2px
		margin-top: block-10
		margin-bottom: block-10


	blockquote
		font-style: italic
		font-size: 24px
		font-family: font-blockquote
		line-height: 1.2
		text-align: center
		border: border-dashed
		margin-top: block-10
		margin-bottom: block-10

	.pullquote
		text-align: left
		width: 45%
		margin: 0

		&.left
			margin-left: 0.5em
			margin-right: 1em
			float:left

		&.right
			margin-right: 0.5em
			margin-left: 1em
			float:right

.content-tag
	font-size: 10px
	text-align: right
	letter-spacing: 2px
	text-transform: uppercase

	&:before
		content: "Tags: "

.content-nav
	letter-spacing: 2px
	text-transform: uppercase
	font-size: 10px
	text-align: right
	margin-top: block-60

	a
		color: color-default
		text-align: right

	a:hover
		color: color-link
